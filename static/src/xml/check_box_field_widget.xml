<templates xml:space="preserve">

    <t t-name="account_move_inherit.ListRenderer.RecordRowWithCheckbox"
       t-inherit="web.ListRenderer.RecordRow"
       t-inherit-mode="primary">

        <t t-if="!isInvisible" position="replace">
            <div class="d-flex justify-between align-items-center gap-1">
                <div>
                    <t t-if="canUseFormatter(column, record)" t-out="getFormattedValue(column, record)"/>
                    <Field t-else="" name="column.name" record="record" type="column.widget" class="getFieldClass(column)" fieldInfo="column" t-props="getFieldProps(record, column)"/>
                </div>
                <div>
                    <t t-if="column.name != 'sequence'" >
                        <CheckBox 
                            value="record.data.extra_flags 
                                &amp;&amp; record.data.extra_flags[record.resId || record.id] 
                                &amp;&amp; record.data.extra_flags[record.resId || record.id].includes(column.name)"
                            t-on-change="(ev) => this.onFieldCheckboxToggle(record, column.name, ev)"
                        />

                    </t>
                </div>
            </div>
        </t>
    </t>
</templates>